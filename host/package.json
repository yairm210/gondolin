{
  "name": "gondolin-host",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/bin/gondolin.js exec",
    "dev": "tsx bin/gondolin.ts exec",
    "dev:ws": "tsx bin/gondolin.ts ws-server",
    "test": "tsx --test test/ws.test.ts",
    "test:ws": "tsx --test test/ws.test.ts",
    "bash": "tsx bin/gondolin.ts bash",
    "gondolin": "tsx bin/gondolin.ts"
  },
  "dependencies": {
    "cbor": "^10.0.4",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.7",
    "@types/ws": "^8.5.12",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  }
}
